{% extends "base.twig" %}

{% block title %}Log in{% endblock %}

{% block body %}

    <h1>Log in</h1>

    <form id="formSignup" action="/login/attempt" method="post">

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="{{ email }}">
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control" name="password" placeholder="Password" type="password"
            />
        </div>

        <div class="checkbox">
            <label>
                <input
                        type="checkbox"
                        name="remember_me"
                        {% if remember_me %} checked="checked"{% endif %}
                >Remember me
            </label>
        </div>

        <input class="btn btn-default" type="submit" name="" id="" value="Submit">
        <a href="/password/forgot">Forgot password</a>
    </form>

{% endblock %}